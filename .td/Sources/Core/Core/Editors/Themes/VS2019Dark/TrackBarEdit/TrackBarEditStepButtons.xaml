                    <Setter Property="BorderBrush"
                            TargetName="IsDefault"
                            Value="$SelectionBorder"
                            cs:id="Setter_0010"/>
                    <Setter Property="Foreground"
                            Value="$SelectionForeground"
                            cs:id="Setter_0011"/>
                </MultiDataTrigger.Setters>
            </MultiDataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>