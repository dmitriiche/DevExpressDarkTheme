    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=PopupTemplate}" TargetType="{x:Type dxe:PopupCalcEditCalculator}">
        <ContentControl dx:FocusHelper2.Focusable="False" Template="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=PopupContentContainerTemplate}}">
            <ContentControl dx:FocusHelper2.Focusable="False" Template="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=ButtonPanelTemplate}}"/>
        </ContentControl>
    </ControlTemplate>

    <dx:NegationConverterExtension x:Key="PopupCalcEditCalculatorEditorIsReadOnlyToIsEnabledConverter"/>

    <ControlTemplate x:Key="{dxet:CalcEditThemeKey ResourceKey=PopupContentTemplate}" TargetType="{x:Type ContentControl}">
        <!--BEGIN WPF-->
        <dxe:PopupCalcEditCalculator FocusVisualStyle="{x:Null}"
                                     IsEnabled="{Binding Path=Tag.IsReadOnly, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource PopupCalcEditCalculatorEditorIsReadOnlyToIsEnabledConverter}}"
