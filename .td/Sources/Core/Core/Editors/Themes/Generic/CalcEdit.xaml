                    Orientation="Horizontal"
                    SnapsToDevicePixels="False"/>
    </ControlTemplate>

    <ControlTemplate x:Key="{dxet:CalculatorThemeKey ResourceKey=Template}" TargetType="{x:Type dxe:Calculator}">
        <Grid SnapsToDevicePixels="True">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="FocusStates">
                    <VisualState x:Name="Focused">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                           Storyboard.TargetName="ElementDisplay"
                                                           Storyboard.TargetProperty="IsEnabled">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <sys:Boolean>True</sys:Boolean>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Unfocused"/>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <ContentControl x:Name="PART_Border"
                            dx:FocusHelper2.Focusable="False"
                            dxn:AppearanceOptions.Background="{Binding Path=(dxn:AppearanceOptions.Background), RelativeSource={RelativeSource TemplatedParent}}"
                            dxn:AppearanceOptions.BorderBrush="{Binding Path=(dxn:AppearanceOptions.BorderBrush), RelativeSource={RelativeSource TemplatedParent}}"
                            dxn:AppearanceOptions.BorderThickness="{Binding Path=(dxn:AppearanceOptions.BorderThickness), RelativeSource={RelativeSource TemplatedParent}}"
                            dxn:AppearanceOptions.CornerRadius="{Binding Path=(dxn:AppearanceOptions.CornerRadius), RelativeSource={RelativeSource TemplatedParent}}"
                            dxn:AppearanceOptions.HasBackground="{Binding Path=(dxn:AppearanceOptions.HasBackground), RelativeSource={RelativeSource TemplatedParent}}"
                            dxn:AppearanceOptions.HasBorderBrush="{Binding Path=(dxn:AppearanceOptions.HasBorderBrush), RelativeSource={RelativeSource TemplatedParent}}"
                            dxn:AppearanceOptions.HasBorderThickness="{Binding Path=(dxn:AppearanceOptions.HasBorderThickness), RelativeSource={RelativeSource TemplatedParent}}"
                            dxn:AppearanceOptions.HasCornerRadius="{Binding Path=(dxn:AppearanceOptions.HasCornerRadius), RelativeSource={RelativeSource TemplatedParent}}"
                            dxn:AppearanceOptions.HasPadding="{Binding Path=(dxn:AppearanceOptions.HasPadding), RelativeSource={RelativeSource TemplatedParent}}"
                            dxn:AppearanceOptions.Padding="{Binding Path=(dxn:AppearanceOptions.Padding), RelativeSource={RelativeSource TemplatedParent}}"
                            HorizontalContentAlignment="Left"
                            Template="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=BorderTemplate}}"
                            VerticalContentAlignment="Stretch">
                <dxe:CalculatorPanel x:Name="PART_CalculatorPanel"
                                     help:BaseEditAppearanceOptions.CEButtonStyle="{TemplateBinding CEButtonStyle}"
                                     help:BaseEditAppearanceOptions.DigitButtonStyle="{TemplateBinding DigitButtonStyle}"
                                     help:BaseEditAppearanceOptions.OperationButtonStyle="{TemplateBinding OperationButtonStyle}">
                    <Button x:Name="ElementDisplay"
                            IsEnabled="False"
                            Style="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=DisplayStyle}}"/>
                    <ContentControl dx:FocusHelper2.Focusable="False"
                                    help:BaseEditAppearanceOptions.CEButtonStyle="{Binding Path=(dxei:BaseEditAppearanceOptions.CEButtonStyle), ElementName=PART_CalculatorPanel}"
                                    help:BaseEditAppearanceOptions.DigitButtonStyle="{Binding Path=(dxei:BaseEditAppearanceOptions.DigitButtonStyle), ElementName=PART_CalculatorPanel}"
                                    help:BaseEditAppearanceOptions.OperationButtonStyle="{Binding Path=(dxei:BaseEditAppearanceOptions.OperationButtonStyle), ElementName=PART_CalculatorPanel}"
                                    Template="{DynamicResource {dxet:CalculatorThemeKey ResourceKey=ButtonPanelTemplate}}"/>
                </dxe:CalculatorPanel>
            </ContentControl>
        </Grid>
    </ControlTemplate>

