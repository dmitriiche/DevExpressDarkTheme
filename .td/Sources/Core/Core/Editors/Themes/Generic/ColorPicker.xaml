    <ControlTemplate x:Key="{dxet:ColorPickerThemeKey ResourceKey=Template}" TargetType="{x:Type dxei:ColorPicker}">
        <Grid Background="Transparent"
              Margin="{Binding Path=Padding, RelativeSource={RelativeSource TemplatedParent}}"
              cs:id="Grid_0000">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="#7F3C3C3C"
                    BorderThickness="1"
                    cs:id="Border_0000">
                <Grid>
                    <Rectangle>
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="1,0.5"
                                                 StartPoint="0,0.5"
                                                 cs:id="LinearGradientBrush_0000">
                                <GradientStop Color="{Binding Path=HSBColor.H, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource HColorToZColorConverter}}" Offset="1"/>
                                <GradientStop Color="#FFFFFFFF"
                                              Offset="0"
                                              cs:id="GradientStop_0000"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle>
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                 cs:id="LinearGradientBrush_0001">
                                <GradientStop Color="Transparent"
                                              Offset="0"
                                              cs:id="GradientStop_0001"/>
                                <GradientStop Color="Black"
                                              Offset="1"
                                              cs:id="GradientStop_0002"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Canvas x:Name="PART_ColorArea"
                            Background="Transparent"
                            dx:FrameworkElementHelper.IsClipped="True"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            cs:id="Canvas_0000">
                        <Canvas x:Name="ColorCanvas"
                                Canvas.Left="{Binding Path=ActualXYThumbXOffset, RelativeSource={RelativeSource TemplatedParent}}"
                                Canvas.Top="{Binding Path=ActualXYThumbYOffset, RelativeSource={RelativeSource TemplatedParent}}"
                                Height="22"
                                Width="22">
                            <Rectangle x:Name="RectangleColorCanvas"
                                       Fill="Transparent"
                                       Height="22"
                                       Width="22"
                                       cs:id="Rectangle_0000"/>
                            <Path Canvas.Left="0"
                                  Canvas.Top="9"
                                  Data="M0,9 L8,9"
                                  Fill="#FF000000"
                                  Height="1"
                                  Stretch="Fill"
                                  Stroke="#FFFFFFFF"
                                  Width="9"
                                  cs:id="Path_0001"/>
                            <Path Canvas.Left="0"
                                  Canvas.Top="10"
                                  Data="M0,10 L8,10"
                                  Fill="#FF000000"
                                  Height="1"
                                  Stretch="Fill"
                                  Stroke="#FF000000"
                                  Width="9"
                                  cs:id="Path_0002"/>
                            <Path Canvas.Left="0"
                                  Canvas.Top="11"
                                  Data="M0,11 L8,11"
                                  Fill="#FF000000"
                                  Height="1"
                                  Stretch="Fill"
                                  Stroke="#FFFFFFFF"
                                  Width="9"
                                  cs:id="Path_0003"/>
                            <Path Canvas.Left="12"
                                  Canvas.Top="9"
                                  Data="M0,9 L8,9"
                                  Fill="#FF000000"
                                  Height="1"
                                  Stretch="Fill"
                                  Stroke="#FFFFFFFF"
                                  Width="9"
                                  cs:id="Path_0004"/>
                            <Path Canvas.Left="12"
                                  Canvas.Top="10"
                                  Data="M0,10 L8,10"
                                  Fill="#FF000000"
                                  Height="1"
                                  Stretch="Fill"
                                  Stroke="#FF000000"
                                  Width="9"
                                  cs:id="Path_0005"/>
                            <Path Canvas.Left="12"
                                  Canvas.Top="11"
                                  Data="M0,11 L8,11"
                                  Fill="#FF000000"
                                  Height="1"
                                  Stretch="Fill"
                                  Stroke="#FFFFFFFF"
                                  Width="9"
                                  cs:id="Path_0006"/>
                            <Path Canvas.Left="9"
                                  Canvas.Top="0"
                                  Data="M9,0 L9,8"
                                  Fill="#FF000000"
                                  Height="9"
                                  Stretch="Fill"
                                  Stroke="#FFFFFFFF"
                                  Width="1"
                                  cs:id="Path_0007"/>
                            <Path Canvas.Left="10"
                                  Canvas.Top="0"
                                  Data="M10,0 L10,8"
                                  Fill="#FF000000"
                                  Height="9"
                                  Stretch="Fill"
                                  Stroke="#FF000000"
                                  Width="1"
                                  cs:id="Path_0008"/>
                            <Path Canvas.Left="11"
                                  Canvas.Top="0"
                                  Data="M11,0 L11,8"
                                  Fill="#FF000000"
                                  Height="9"
                                  Stretch="Fill"
                                  Stroke="#FFFFFFFF"
                                  Width="1"
                                  cs:id="Path_0009"/>
                            <Path Canvas.Left="9"
                                  Canvas.Top="12"
                                  Data="M9,0 L9,8"
                                  Fill="#FF000000"
                                  Height="9"
                                  Stretch="Fill"
                                  Stroke="#FFFFFFFF"
                                  Width="1"
                                  cs:id="Path_0010"/>
                            <Path Canvas.Left="10"
                                  Canvas.Top="12"
                                  Data="M10,0 L10,8"
                                  Fill="#FF000000"
                                  Height="9"
                                  Stretch="Fill"
                                  Stroke="#FF000000"
                                  Width="1"
                                  cs:id="Path_0011"/>
                            <Path Canvas.Left="11"
                                  Canvas.Top="12"
                                  Data="M11,0 L11,8"
                                  Fill="#FF000000"
                                  Height="9"
                                  Stretch="Fill"
                                  Stroke="#FFFFFFFF"
                                  Width="1"
                                  cs:id="Path_0012"/>
                        </Canvas>
                    </Canvas>
                </Grid>
            </Border>
            <Border Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Grid.Row="1"
                    Margin="0,3,0,0"
                    Visibility="{Binding Path=ShowAlphaChannel, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid Height="22">
                    <dxei:TransparentBrushRectangle BlockHeight="4"
                                                    BlockWidth="4"
                                                    dx:FocusHelper2.Focusable="False"
                                                    Grid.ColumnSpan="2"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"/>
                    <Rectangle>
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="1,0.5"
                                                 StartPoint="0,0.5"
                                                 cs:id="LinearGradientBrush_0002">
                                <GradientStop Color="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ColorWithoutAlphaConverter}}" Offset="0"/>
                                <GradientStop Color="#00000000"
                                              Offset="1"
                                              cs:id="GradientStop_0003"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Canvas x:Name="PART_AlphaChannelArea"
                            Background="Transparent"
                            dx:FrameworkElementHelper.IsClipped="True"
                            cs:id="Canvas_0001">
                        <Path x:Name="PART_AlphaThumbTop"
                              Canvas.Left="{Binding Path=ActualAlphaThumbOffset, RelativeSource={RelativeSource TemplatedParent}}"
                              Data="M0,0 L10,0 5,5 z"
                              Fill="#FF000000"
                              Height="5"
                              IsHitTestVisible="False"
                              Width="10"
                              cs:id="Path_0000"/>
                        <Path x:Name="PART_AlphaThumbBottom"
                              Canvas.Left="{Binding Path=ActualAlphaThumbOffset, RelativeSource={RelativeSource TemplatedParent}}"
                              Canvas.Top="17"
                              Data="M0,5 L5,0 10,5 z"
                              Fill="#FF000000"
                              Height="5"
                              IsHitTestVisible="False"
                              Width="10"
                              cs:id="Path_0013"/>
                    </Canvas>
                </Grid>
            </Border>
            <Border x:Name="BorderRoot"
                    BorderBrush="#7F3C3C3C"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="2"
                    Height="22"
                    Margin="0,3,0,0"
                    cs:id="Border_0001">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{Binding Path=ShowDefaultColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ShowDefaultColorToColumnWidthConverter}}"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <dxei:TransparentBrushRectangle BlockHeight="4"
                                                    BlockWidth="4"
                                                    dx:FocusHelper2.Focusable="False"
                                                    Grid.ColumnSpan="2"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"/>
                    <Button x:Name="PART_DefaultColorButton"
                            BorderThickness="0"
                            Command="{Binding Path=SetDefaultColorCommand, RelativeSource={RelativeSource TemplatedParent}}"
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            Style="{DynamicResource ResourceKey={dxet:ColorPickerThemeKey ResourceKey=DefaultColorButtonStyle}}"
                            VerticalAlignment="Stretch"
                            Visibility="{Binding Path=ShowDefaultColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button.Background>
                            <SolidColorBrush Color="{Binding Path=DefaultColor, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </Button.Background>
                    </Button>
                    <Rectangle x:Name="PART_ColorRect"
                               Fill="{TemplateBinding Color, Converter={StaticResource ColorToBrushConverter}}"
                               Grid.Column="1"
                               HorizontalAlignment="Stretch"
                               IsHitTestVisible="False"
                               VerticalAlignment="Stretch"/>
                </Grid>
            </Border>
            <Border x:Name="Y"
                    BorderBrush="#7F3C3C3C"
                    BorderThickness="1"
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="4,0,0,0"
                    VerticalAlignment="Stretch"
                    cs:id="Border_0002">
                <Grid x:Name="YRoot" Width="22">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="3"/>
                    </Grid.RowDefinitions>
                    <Rectangle x:Name="PART_ZColorAreaRect"
                               Grid.RowSpan="2"
                               StrokeThickness="0">
                        <Rectangle.Fill>
                            <LinearGradientBrush x:Name="zColor"
                                                 EndPoint="0.5,1"
                                                 StartPoint="0.5,0"
                                                 cs:id="LinearGradientBrush_0003">
                                <GradientStop x:Name="zColor1"
                                              Color="#FFFF0000"
                                              Offset="0"
                                              cs:id="GradientStop_0004"/>
                                <GradientStop x:Name="zColor2"
                                              Color="#FFFFFF00"
                                              Offset="0.166666"
                                              cs:id="GradientStop_0005"/>
                                <GradientStop x:Name="zColor3"
                                              Color="#FF00FF00"
                                              Offset="0.333333"
                                              cs:id="GradientStop_0006"/>
                                <GradientStop x:Name="zColor4"
                                              Color="#FF00FFFF"
                                              Offset="0.5"
                                              cs:id="GradientStop_0007"/>
                                <GradientStop x:Name="zColor5"
                                              Color="#FF0000FF"
                                              Offset="0.666666"
                                              cs:id="GradientStop_0008"/>
                                <GradientStop x:Name="zColor6"
                                              Color="#FFFF00FF"
                                              Offset="0.833333"
                                              cs:id="GradientStop_0009"/>
                                <GradientStop x:Name="zColor7"
                                              Color="#FFFF0000"
                                              Offset="1"
                                              cs:id="GradientStop_0010"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Canvas x:Name="PART_ZColorArea"
                            Background="Transparent"
                            dx:FrameworkElementHelper.IsClipped="True"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            cs:id="Canvas_0002">
                        <Path x:Name="PART_ZThumbLeft"
                              Canvas.Top="{Binding Path=ActualZThumbOffset, RelativeSource={RelativeSource TemplatedParent}}"
                              Data="M0,0 L5,5 0,10 z"
                              Fill="#FF000000"
                              Height="10"
                              IsHitTestVisible="False"
                              Width="5"
                              cs:id="Path_0014"/>
                        <Path x:Name="PART_ZThumbRight"
                              Canvas.Left="17"
                              Canvas.Top="{Binding Path=ActualZThumbOffset, RelativeSource={RelativeSource TemplatedParent}}"
                              Data="M 5,0 L0,5 5,10 z"
                              Fill="#FF000000"
                              Height="10"
                              IsHitTestVisible="False"
                              Width="5"
                              cs:id="Path_0015"/>
                    </Canvas>
                </Grid>
            </Border>
            <Button Command="{Binding Path=EnablePippetModeCommand, RelativeSource={RelativeSource TemplatedParent}}"
                    Focusable="False"
                    Grid.Column="1"
                    Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    Margin="4,4,0,1"
                    Template="{DynamicResource ResourceKey={dxet:ColorPickerThemeKey ResourceKey=PipetButtonTemplate}}"
                    VerticalAlignment="Stretch"/>
            <StackPanel Grid.Column="2"
                        Grid.Row="0"
                        Margin="5,0,0,0"
                        Orientation="Vertical"
                        Visibility="{Binding Path=ActualShowEditors, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}"
                        Width="85">
                <dxe:ComboBoxEdit x:Name="PART_ColorModeComboBoxEdit"
                                  DisplayMember="Text"
                                  EditValue="{Binding Path=ColorMode, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  HorizontalAlignment="Stretch"
                                  IsTextEditable="False"
                                  ItemsSource="{dxei:ColorModeList}"
                                  ValueMember="Value"/>
                <dxei:ColorPickerDataContentPresenter x:Name="PART_EditorsContentPresenter"
                                                      Content="{Binding Path=ColorViewModel, RelativeSource={RelativeSource TemplatedParent}}"
                                                      ContentTemplateSelector="{StaticResource ColorModeTemplateSelector}"
                                                      HorizontalAlignment="Stretch"/>
            </StackPanel>
            <dxe:TextEdit x:Name="PART_ResultColor"
                          Grid.Column="2"
                          Grid.Row="2"
                          Margin="5,5,0,0"
                          ShowError="False"
                          ValidateOnTextInput="False"
                          VerticalAlignment="Bottom"
                          Visibility="{Binding Path=ActualShowEditors, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}"
                          Width="85">
                <dxe:TextEdit.EditValue>
                    <MultiBinding Converter="{StaticResource ColorConverter}" UpdateSourceTrigger="PropertyChanged">
                        <Binding Mode="TwoWay"
                                 Path="Color"
                                 RelativeSource="{RelativeSource TemplatedParent}"/>
                        <Binding Mode="OneWay"
                                 Path="ShowAlphaChannel"
                                 RelativeSource="{RelativeSource TemplatedParent}"/>
                    </MultiBinding>
                </dxe:TextEdit.EditValue>
            </dxe:TextEdit>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Width"
                        TargetName="ColorCanvas"
                        Value="44"/>
                <Setter Property="Height"
                        TargetName="ColorCanvas"
                        Value="44"/>
                <Setter Property="Height"
                        TargetName="BorderRoot"
                        Value="44"/>
                <Setter Property="Width"
                        TargetName="YRoot"
                        Value="44"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>